<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="jscihw" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>edu.fpezzati.jsfci.model.Kind</class>
		<class>edu.fpezzati.jsfci.model.ShipmentActor</class>
		<class>edu.fpezzati.jsfci.model.task.Task</class>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL10Dialect" />
			  <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			  <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://${PG_HOST}:${PG_PORT}/${PG_DATABASE}"/>
			  <property name="javax.persistence.jdbc.user" value="${PG_USER}"/>
			  <property name="javax.persistence.jdbc.password" value="${PG_PASSWORD}"/>
		</properties>
	</persistence-unit>
</persistence>
